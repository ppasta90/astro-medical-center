  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
      <div class="md:flex">
        <!-- Profile Image -->
        <div class="md:w-1/3 p-8 flex flex-col items-center justify-center bg-primaryLight">
          <img
            src={`/${doctor.image}`}
            alt={`foto del medico specialista ${doctor.name} ${doctor.surname}`}
            class="w-64 h-64 rounded-full object-cover shadow-lg"
            loading="lazy"
          />
        </div>

        <!-- Basic Info -->
        <div class="md:w-2/3 p-8 flex flex-col justify-center">
          <h1 class="text-4xl font-bold text-darkBlue mb-2">
            Dott. {doctor.name} {doctor.surname}
          </h1>
          <h2 class="text-2xl text-primary mb-6">{professionTitle}</h2>

          <div class="flex flex-wrap gap-4">
            <a
              href="tel:0574027087"
              class="blue-cta"
            >
              CHIAMA ORA
            </a>
            {doctor.link && (
              <a
                href={doctor.link}
