---
import Layout from "../layouts/Layout.astro";
import specializationsData from "../db/data.json";
import { capitalizeFirstLetter, generateDoctorSlug } from "@/lib/utils";

export function getStaticPaths() {
  return specializationsData.map((doctor) => ({
    params: { slug: generateDoctorSlug(doctor.surname, doctor.specialization) },
    props: { doctor },
  }));
}

const { doctor } = Astro.props;
const title = `Dott. ${doctor.name} ${doctor.surname} - ${doctor.specialization}`;
---

<Layout>
  <section class="bg-secondary py-20 min-h-screen">
    <div class="max-w-6xl mx-auto px-6 md:px-20">
      <div class="bg-secondaryLight rounded-2xl p-8 md:p-12">
        <!-- Header Section -->
        <div class="text-center mb-12">
          <img
            src={`/${doctor.image}`}
            alt={`Foto del Dott. ${doctor.name} ${doctor.surname}`}
            class="w-32 h-32 rounded-full mx-auto object-contain mb-6"
            loading="lazy"
          />
          <h1 class="text-4xl font-bold text-darkBlue mb-2">
            Dott. {doctor.name} {doctor.surname}
          </h1>
          <h2 class="text-2xl text-darkBlue mb-6">{doctor.specialization}</h2>
          
          <!-- Call to Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
            <a href="tel:0574027087" class="blue-cta">
              CHIAMA ORA
            </a>
            {doctor.link && (
              <a
                href={doctor.link}
                target="_blank"
                rel="noreferrer"
                class="white-cta"
              >
                PRENOTA ONLINE
              </a>
            )}
          </div>
        </div>

        <!-- Bio Section -->
        <div class="mb-8">
          <h3 class="text-2xl font-bold text-darkBlue mb-4">Esperienze</h3>
          <div class="bg-white rounded-lg p-6">
            <p class="text-darkBlue leading-relaxed whitespace-pre-line">{doctor.bio}</p>
          </div>
        </div>

        <!-- Services Section -->
        {doctor.services && doctor.services.length > 0 && (
          <div class="mb-8">
            <h3 class="text-2xl font-bold text-darkBlue mb-4">Servizi</h3>
            <div class="bg-white rounded-lg p-6">
              <ul class="list-disc list-inside text-darkBlue space-y-2">
                {doctor.services.map((service) => (
                  <li>{capitalizeFirstLetter(service)}</li>
                ))}
              </ul>
            </div>
          </div>
        )}

        <!-- Navigation -->
        <div class="text-center mt-12">
          <a
            href="/specializzazioni"
            class="inline-flex items-center text-secondary font-bold hover:underline text-lg"
          >
            ‚Üê Torna alla lista degli specialisti
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>