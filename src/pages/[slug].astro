---
import Layout from "../layouts/Layout.astro";
import specializationsData from "../db/data.json";
import { capitalizeFirstLetter, generateDoctorSlug } from "@/lib/utils";

// Detect gender for profession title
const detectGender = (name: string): 'male' | 'female' => {
  const femaleNames = ['alessia', 'giulia', 'anna', 'ilaria', 'linda', 'sandra', 'francesca', 'dalila', 'jessica', 'marianna', 'laura', 'ilenia', 'serena', 'rachele', 'carlotta'];
  const maleExceptions = ['andrea', 'luca', 'nicola', 'mattia'];
  const normalizedName = name.toLowerCase().trim();

  if (femaleNames.includes(normalizedName)) return 'female';
  if (maleExceptions.includes(normalizedName)) return 'male';
  if (normalizedName.endsWith('a')) return 'female';
  return 'male';
};

const specializationToProfession: { [key: string]: { male: string; female: string } } = {
  "Audiologia": { male: "Audiologo", female: "Audiologa" },
  "Oculistica": { male: "Oculista", female: "Oculista" },
  "Endocrinologia": { male: "Endocrinologo", female: "Endocrinologa" },
  "Ginecologia": { male: "Ginecologo", female: "Ginecologa" },
  "Podologia": { male: "Podologo", female: "Podologa" },
  "Dermatologia": { male: "Dermatologo", female: "Dermatologa" },
  "Urologia": { male: "Urologo", female: "Urologa" },
  "Psicologia": { male: "Psicologo", female: "Psicologa" },
  "Psichiatria": { male: "Psichiatra", female: "Psichiatra" },
  "Senologia": { male: "Senologo", female: "Senologa" },
  "Ostetricia": { male: "Ostetrico", female: "Ostetrica" },
  "Nutrizione": { male: "Nutrizionista", female: "Nutrizionista" },
  "Dietistica": { male: "Dietista", female: "Dietista" },
  "Ecografia": { male: "Ecografista", female: "Ecografista" },
  "Massofisioterapia": { male: "Massofisioterapista", female: "Massofisioterapista" },
  "Psiocologia e sessuologia": { male: "Psicologo e Sessuologo", female: "Psicologa e Sessuologa" }
};

export function getStaticPaths() {
  return specializationsData.map((doctor) => ({
    params: { slug: generateDoctorSlug(doctor.surname, doctor.specialization, doctor.name) },
    props: { doctor },
  }));
}

const { doctor } = Astro.props;
const gender = detectGender(doctor.name);
const professionTitle = specializationToProfession[doctor.specialization]?.[gender] || doctor.specialization;
const title = `Dott. ${doctor.name} ${doctor.surname} - ${professionTitle}`;
---

<Layout>
  <section class="bg-secondary pt-32 pb-20">
    <!-- Header Section -->
    <div class="w-[90%] m-auto mb-12">
      <div class="flex flex-col md:flex-row items-center gap-8 mb-8">
        <!-- Picture Left -->
        <div class="flex-shrink-0 flex justify-center">
          <img
            src={`/${doctor.image}`}
            alt={`Foto del Dott. ${doctor.name} ${doctor.surname}`}
            class="w-72 h-72 rounded-3xl object-cover"
            loading="lazy"
          />
        </div>
        
        <!-- Info Right -->
        <div class="flex-grow text-center md:text-left">
          <h1 class="section-title text-center md:text-left mb-4">
            Dott. {doctor.name} {doctor.surname}
          </h1>
          <h2 class="section-subtitle text-white text-center md:text-left mb-8">{professionTitle}</h2>
          
          <!-- Call to Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            {doctor.link && (
              <a
                href={doctor.link}
                target="_blank"
                rel="noreferrer"
                class="white-cta"
              >
                PRENOTA ONLINE
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Content Sections -->
    <div class="w-[90%] m-auto">
      <!-- Bio Section -->
      <div class="mb-12">
        <h3 class="section-title mb-6">Esperienze</h3>
        <div class="bg-secondaryLight rounded-lg p-8">
          <p class="text-darkBlue leading-relaxed whitespace-pre-line text-lg">{doctor.bio}</p>
        </div>
      </div>

      <!-- Services Section -->
      {doctor.services && doctor.services.length > 0 && (
        <div class="mb-12">
          <h3 class="section-title mb-6">Servizi</h3>
          <div class="bg-secondaryLight rounded-lg p-8">
            <ul class="list-disc list-inside text-darkBlue space-y-3 text-lg">
              {doctor.services.map((service) => (
                <li>{capitalizeFirstLetter(service)}</li>
              ))}
            </ul>
          </div>
        </div>
      )}

      <!-- Navigation -->
      <div class="text-center mt-16">
        <a
          href="/specializzazioni"
          class="inline-flex items-center text-primary font-bold hover:underline text-xl font-serif"
        >
          ‚Üê Torna alla lista degli specialisti
        </a>
      </div>
    </div>
  </section>
</Layout>